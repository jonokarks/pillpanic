{
  "name": "pill-panic",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build": "npm run build:web && echo '\n✅ Web build complete! Open dist/index.html in a browser.\nFor mobile builds, run: npm run build:ios or npm run build:android'",
    "build:web": "npx expo export --platform web --output-dir dist",
    "build:ios": "eas build --platform ios",
    "build:android": "eas build --platform android",
    "build:android:local": "cd android && ./gradlew assembleRelease && echo '\n✅ APK created at: android/app/build/outputs/apk/release/'",
    "preview:web": "npm run build:web && npx serve dist",
    "preview": "npm run preview:web"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "expo": "~53.0.20",
    "expo-av": "^15.1.7",
    "expo-haptics": "^14.1.4",
    "expo-linear-gradient": "^14.1.5",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-game-engine": "^1.2.0",
    "react-native-gesture-handler": "^2.27.2",
    "react-native-reanimated": "^3.19.0",
    "react-native-web": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.0.10",
    "typescript": "~5.8.3"
  },
  "private": true
}
